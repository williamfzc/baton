{
  "name": "baton",
  "version": "0.1.0",
  "description": "Connect IM with local ACP agents",
  "type": "module",
  "main": "src/cli.ts",
  "bin": {
    "baton": "src/cli.ts"
  },
  "scripts": {
    "start": "bun src/index.ts",
    "start:cli": "bun src/cli.ts",
    "start:feishu": "bun src/feishu-server.ts",
    "start:telegram": "bun src/telegram-server.ts",
    "start:whatsapp": "bun src/whatsapp-server.ts",
    "start:slack": "bun src/slack-server.ts",
    "start:discord": "bun src/discord-server.ts",
    "dev": "bun --watch src/index.ts",
    "dev:cli": "bun --watch src/cli.ts",
    "dev:feishu": "bun --watch src/feishu-server.ts",
    "dev:telegram": "bun --watch src/telegram-server.ts",
    "dev:whatsapp": "bun --watch src/whatsapp-server.ts",
    "dev:slack": "bun --watch src/slack-server.ts",
    "dev:discord": "bun --watch src/discord-server.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test tests/core/*.test.ts tests/new-architecture.test.ts",
    "test:e2e": "bun test tests/e2e/*.test.ts",
    "typecheck": "tsc --noEmit",
    "build": "bun build --compile src/index.ts --outfile baton",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "test:cli": "bun run src/core/test/cli-mode.ts",
    "test:new": "bun test tests/new-architecture.test.ts"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.14.1",
    "@larksuiteoapi/node-sdk": "^1.58.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
